{

  "manifest_version": 2,
  "name": "MetaConnect",
  "version": "1.0",

  "description": "MetaConnect",
  "homepage_url": "https://github.com/mewwts/metaconnect",
  "icons": {
    "48": "icons/borders-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/borders-48.png",
    "default_title": "MetaConnect",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["metaconnect.js"]
      }
  ]
}
